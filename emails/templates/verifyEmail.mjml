<mjml>
  <mj-head>
    <mj-title>Verify Your LifeGuard Account</mj-title>
    <mj-font name="Inter" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" />
    <mj-attributes>
      <mj-all font-family="Inter, Arial, sans-serif" />
    </mj-attributes>
  </mj-head>
  <mj-body background-color="#f8fafc">
    <!-- Header -->
    <mj-section background-color="#ffffff" padding="40px 20px 20px">
      <mj-column>
        <mj-image 
          src="data:image/svg+xml;base64," 
          width="64px" 
          align="center" 
        />
        <mj-text align="center" font-size="32px" font-weight="700" color="#1e293b" padding-top="20px">
          LifeGuard
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Main Content -->
    <mj-section background-color="#ffffff" padding="20px">
      <mj-column>
        <mj-text font-size="24px" font-weight="600" color="#1e293b" padding-bottom="20px">
          Verify Your Email Address
        </mj-text>
        
        <mj-text font-size="16px" line-height="24px" color="#475569" padding-bottom="20px">
          Hi {{name}},
        </mj-text>

        <mj-text font-size="16px" line-height="24px" color="#475569" padding-bottom="20px">
          Thank you for signing up with LifeGuard! To complete your registration and access your account, please verify your email address by clicking the button below.
        </mj-text>

        <mj-button 
          background-color="#f59e0b" 
          color="#ffffff" 
          font-size="16px" 
          font-weight="600" 
          border-radius="12px" 
          padding="12px 24px"
          href="{{verificationLink}}"
        >
          Verify Email Address
        </mj-button>

        <mj-text font-size="14px" line-height="20px" color="#64748b" padding="20px 0">
          This verification link will expire in {{expiresAt}}. If you didn't create an account with LifeGuard, you can safely ignore this email.
        </mj-text>

        <mj-text font-size="14px" line-height="20px" color="#64748b">
          If the button above doesn't work, copy and paste this link into your browser:
        </mj-text>
        
        <mj-text font-size="14px" line-height="20px" color="#3b82f6" padding="10px 0">
          {{verificationLink}}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Security Notice -->
    <mj-section background-color="#fef3c7" padding="20px" border-radius="12px">
      <mj-column>
        <mj-text font-size="14px" line-height="20px" color="#92400e" align="center">
          <strong>Security Notice:</strong> This email contains a verification link. Never share this link with others and only click it if you recently signed up for LifeGuard.
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section background-color="#1e293b" padding="40px 20px">
      <mj-column>
        <mj-text align="center" color="#94a3b8" font-size="14px" line-height="20px">
          You're receiving this email because you signed up for a LifeGuard account.
        </mj-text>
        <mj-text align="center" color="#94a3b8" font-size="14px" line-height="20px" padding-top="10px">
          Â© 2024 LifeGuard. All rights reserved.
        </mj-text>
        <mj-text align="center" color="#94a3b8" font-size="14px" padding-top="20px">
          <a href="#" style="color: #94a3b8; text-decoration: underline;">Privacy Policy</a> | 
          <a href="#" style="color: #94a3b8; text-decoration: underline;">Contact Support</a>
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
